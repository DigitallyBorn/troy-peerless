<div id="admin-user-index">
  <h1>Users</h1>
  <div class="row">
    <% for user in @users %>
    <div class="user-list-item col-xs-6 col-md-4">
      <div class="row">
        <div class="hidden-xs col-sm-4">
          <%= link_to edit_admin_user_path(user.id) do %>
          <%= image_tag user.image, class: 'img-responsive' %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-8">
          <h3><%= link_to user.name, edit_admin_user_path(user.id) %></h3>
          <%= user.lives_in %>
        </div>
      </div>
      <div class="item-bottom-padding hidden-xs"></div>
    </div>

    <%= raw cycle('', '<div class="clearfix visible-sm-block visible-xs-block"></div>', { name: 'small-clear' }) %>
    <%= raw cycle('', '', '<div class="clearfix visible-md-block visible-lg-block"></div>', { name: 'medium-clear' }) %>

    <% end %>
  </div>
</div>
