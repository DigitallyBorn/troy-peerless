<h1><%= @user.name %></h1>
<%= simple_form_for @user, url: 'edit_admin_user' do |f| %>
  <%= f.input :name %>
  <% if policy(@user).change_role? %>
    <%= f.input :role, collection: @roles %>
  <% end %>
  <%= f.button :submit, class: 'btn-primary' %>
<% end %>

<% @user.owns_units.map(&:unit).each do |unit| %>
  <%= unit_user.number %>
<% end %>
